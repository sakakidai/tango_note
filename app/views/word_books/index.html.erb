<p id="notice"><%= notice %></p>

<h1>Word Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_books.each do |word_book| %>
      <tr>
        <td><%= word_book.title %></td>
        <td><%= word_book.user_id %></td>
        <td><%= link_to 'Show', word_book %></td>
        <td><%= link_to 'Edit', edit_word_book_path(word_book) %></td>
        <td><%= link_to 'Destroy', word_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word Book', new_word_book_path %>
